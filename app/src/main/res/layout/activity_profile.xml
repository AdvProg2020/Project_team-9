<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        tools:context="com.sasp.saspstore.ProfileActivity">

        <Button
            android:id="@+id/seeCartButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/buttons"
            android:onClick="seeCartTapped"
            android:text="مشاهده سبد خرید"
            android:theme="@style/buttonTexts" />

        <Button
            android:id="@+id/seeMessagesToCurrentAssistantButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/buttons"
            android:onClick="seeMessagesToCurrentAssistantTapped"
            android:text="مشاهده پیام‌ها"
            android:theme="@style/buttonTexts" />

        <Button
            android:id="@+id/seeOnlineAssistantsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/buttons"
            android:onClick="seeOnlineAssistantsTapped"
            android:text="مشاهده پشتیبان‌های آنلاین"
            android:theme="@style/buttonTexts" />

        <Button
            android:id="@+id/seeAuctionsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/buttons"
            android:onClick="seeAuctionsTapped"
            android:text="مشاهده مزایده‌ها"
            android:theme="@style/buttonTexts" />

        <Button
            android:id="@+id/setKarmozdButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/buttons"
            android:onClick="setKarmozdTapped"
            android:text="ثبت میزان کارمزد"
            android:theme="@style/buttonTexts"
            android:visibility="gone" />

        <Button
            android:id="@+id/setMinimumCreditButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/buttons"
            android:onClick="setMinimumCreditTapped"
            android:text="ثبت حداقل مبلغ مجاز در کیف پول"
            android:theme="@style/buttonTexts"
            android:visibility="gone" />

        <Button
            android:id="@+id/addCreditButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/buttons"
            android:onClick="addCreditTapped"
            android:text="شارژ کردن کیف پول به میزان تعیین شده در فوق"
            android:theme="@style/buttonTexts" />

        <Button
            android:id="@+id/removeCreditButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/buttons"
            android:onClick="removeCreditTapped"
            android:text="برداشت از کیف پول به میزان تعیین شده در فوق"
            android:theme="@style/buttonTexts" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/buttons"
            android:onClick="logTapped"
            android:text="تاریخچه تراکنش‌ها"
            android:theme="@style/buttonTexts" />

        <Button
            android:id="@+id/inSellProductListButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/buttons"
            android:onClick="inSellProductListTapped"
            android:text="لیست کالاهای فروشی"
            android:theme="@style/buttonTexts" />

        <Button
            android:id="@+id/seeAllCouponsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/buttons"
            android:onClick="seeAllCouponsTapped"
            android:text="مشاهده کدهای تخفیف"
            android:theme="@style/buttonTexts" />

        <!--        <Button-->
        <!--            android:id="@+id/addCreditButton"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_margin="20dp"-->
        <!--            android:text="افزایش ۵ تومانی اعتبار حساب"-->
        <!--            android:background="@drawable/buttons"-->
        <!--            android:theme="@style/buttonTexts"-->
        <!--            android:onClick="addCreditTapped"/>-->

        <Button
            android:id="@+id/seeAllUsersButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/buttons"
            android:onClick="seeAllUsersTapped"
            android:text="مشاهده لیست کاربران"
            android:theme="@style/buttonTexts" />

        <Button
            android:id="@+id/seeAllRequestsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/buttons"
            android:onClick="seeAllRequestsTapped"
            android:text="مشاهده لیست درخواست‌ها"
            android:theme="@style/buttonTexts" />

        <Button
            android:id="@+id/seeAllCategoriesButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/buttons"
            android:onClick="seeAllCategoriesTapped"
            android:text="مشاهده لیست دسته‌بندی‌ها"
            android:theme="@style/buttonTexts" />

        <Button
            android:id="@+id/profile_adBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/buttons"
            android:onClick="addAdTapped"
            android:text="درخواست تبلیغ"
            android:theme="@style/buttonTexts"
            android:visibility="gone" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/buttons"
            android:onClick="logoutTapped"
            android:text="خروج از حساب"
            android:theme="@style/buttonTexts" />

        <EditText
            android:id="@+id/profile_karmozdTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="right"
            android:hint="کارمزد"
            android:text=""
            android:theme="@style/usualTexts"
            android:visibility="gone" />

        <EditText
            android:id="@+id/profile_minimumCreditTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="right"
            android:hint="حداقل مبلغ مجاز در کیف پول"
            android:text=""
            android:theme="@style/usualTexts"
            android:visibility="gone" />

        <EditText
            android:id="@+id/profile_creditTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="right"
            android:hint="مبلغ"
            android:text=""
            android:theme="@style/usualTexts"
            android:visibility="gone" />

        <EditText
            android:id="@+id/profile_adTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="right"
            android:hint="متن تبلیغ"
            android:text=""
            android:theme="@style/usualTexts"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/fragment_profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="right"
            android:text=""
            android:theme="@style/titleTexts" />

        <TextView
            android:id="@+id/fragment_profile_usernameAndRole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="right"
            android:text=""
            android:theme="@style/usualTexts" />

        <TextView
            android:id="@+id/fragment_profile_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="right"
            android:text=""
            android:theme="@style/usualTexts" />

        <TextView
            android:id="@+id/fragment_profile_phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="right"
            android:text=""
            android:theme="@style/usualTexts" />

        <TextView
            android:id="@+id/fragment_profile_companyDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="right"
            android:text=""
            android:theme="@style/usualTexts"
            android:visibility="gone" />

        <TextView
            android:id="@+id/fragment_profile_credit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="right"
            android:text="اعتبار: "
            android:theme="@style/usualTexts"
            android:visibility="gone"
            tools:ignore="RtlHardcoded" />

    </LinearLayout>
</ScrollView>