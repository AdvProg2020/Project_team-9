<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sasp.saspstore.UsersListActivity"
    android:orientation="vertical">
    <Button
        android:id="@+id/allUsersList_addAdminButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="افزودن مدیر"
        android:background="@drawable/buttons"
        android:theme="@style/buttonTexts"
        android:onClick="addAdminTapped"/>
    <Button
        android:id="@+id/allUsersList_addAssistantButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="افزودن پشتیبان"
        android:background="@drawable/buttons"
        android:theme="@style/buttonTexts"
        android:onClick="addAssistantTapped"/>
    <ListView
        android:id="@+id/allUsersList"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
    </ListView>
</LinearLayout>