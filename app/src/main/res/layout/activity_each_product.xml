<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent" android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"><LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.sasp.saspstore.EachProductActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/eachProductImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:contentDescription="Product Image"
        android:scaleType="centerCrop" />
    <ImageView
        android:id="@+id/eachProductImageViewOverlay"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="-200dp"
        android:contentDescription="Product Image"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/eachProductScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/yekan"
        android:textAlignment="center"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/eachProductTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/yekan"
        android:textSize="45sp" />

    <TextView
        android:id="@+id/eachProductBrand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/yekan"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/eachProductPriceAndDiscountPercent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/yekan"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/eachProductNumberAvailable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/yekan"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/eachProductDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/yekan"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/eachProductDateCreated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/yekan"
        android:textSize="25sp" />

<!--    TODO: Can sellers enter this activity in order to make auction? -->

    <Button
        android:id="@+id/eachProduct_makeAuctionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="به مزایده گذاشتن"
        android:background="@drawable/buttons"
        android:theme="@style/buttonTexts"
        android:onClick="makeAuctionTapped"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="افزودن به سبد خرید"
        android:background="@drawable/buttons"
        android:theme="@style/buttonTexts"
        android:onClick="addToCartTapped"/>

    <Button
        android:id="@+id/get_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="دریافت فایل"
        android:visibility="gone"
        android:background="@drawable/buttons"
        android:theme="@style/buttonTexts"
        android:onClick="getFileTapped" />

    <Button
        android:id="@+id/show_video_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="مشاهده‌ی فیلم"
        android:background="@drawable/buttons"
        android:theme="@style/buttonTexts"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="مشاهده نظرات کاربران"
        android:background="@drawable/buttons"
        android:theme="@style/buttonTexts"
        android:onClick="showCommentsTapped"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="ثبت نظر برای کالا"
        android:background="@drawable/buttons"
        android:theme="@style/buttonTexts"
        android:onClick="submitCommentTapped"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="ثبت امتیاز برای کالا"
        android:background="@drawable/buttons"
        android:theme="@style/buttonTexts"
        android:onClick="submitScoreTapped"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="مشاهده ویژگی‌های دسته‌بندی"
        android:background="@drawable/buttons"
        android:theme="@style/buttonTexts"
        android:onClick="seeFeaturesTapped"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="نام کالای مشابه"
        android:fontFamily="@font/yekan"
        android:textSize="25sp" />
    <EditText
        android:id="@+id/eachProductCompareProductID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:fontFamily="@font/yekan"
        android:textSize="20sp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="مقایسه محصول"
        android:background="@drawable/buttons"
        android:theme="@style/buttonTexts"
        android:onClick="compareTapped"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="مشاهده محصولات مشابه"
        android:background="@drawable/buttons"
        android:theme="@style/buttonTexts"
        android:onClick="seeSimilarsTapped"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="ورود به پروفایل"
        android:background="@drawable/buttons"
        android:theme="@style/buttonTexts"
        android:onClick="profileTapped"/>

</LinearLayout></ScrollView>